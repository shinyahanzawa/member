<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    <title>Membership registration confirmation</title>
  </head>
  <body>
    <form method="post" action="list.php">
      <table>
        <tr>
          <th>Full name</th>
          <td>{{ dataArr.family_name }} {{ dataArr.first_name }}</td>
        </tr>
        <tr>
          <th>kana</th>
          <td>{{ dataArr.family_name_kana }} {{ dataArr.first_name_kana }}</td>
        </tr>
        <tr>
          <th>Password</th>
          <td>{{ dataArr.password }}</td>
        </tr>
        <tr>
          <th>Email</th>
          <td>{{ dataArr.email }}</td>
        </tr>
        <tr>
          <th>Phone number</th>
          <td>{{ dataArr.tel1 }} - {{ dataArr.tel2 }} - {{ dataArr.tel3 }}</td>
        </tr>
        <tr>
          <th>Sex</th>
          <td>
            {% if dataArr.sex == '1' %}male{% elseif dataArr.sex == '2' %}female{%
            endif %}
          </td>
        </tr>
        <tr>
          <th>Birthday</th>
          <td>
            {{ dataArr.year }}year {{ dataArr.month }}month {{ dataArr.day }}day
          </td>
        </tr>
        <tr>
          <th>Postal code</th>
          <td>{{ dataArr.zip1 }} - {{ dataArr.zip2 }}</td>
        </tr>
        <tr>
          <th>Address</th>
          <td>{{ dataArr.address }}</td>
        </tr>
        <tr>
          <th>Transportation</th>
          <td>
            {% for val in dataArr.traffic %}
            {{ trafficArr[val] }}<br />
            {% endfor %}
          </td>
        </tr>
        <tr>
          <th>Remarks</th>
          <td>{{ dataArr.contents | nl2br }}</td>
        </tr>
      </table>

      <div>
        <input type="submit" name="back" value="back" />
      </div>
    </form>
  </body>
</html>
